<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/goBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/arrow_back"
                android:backgroundTint="@color/black"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:textSize="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추천 스트레칭"
                android:textSize="20dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/binggrae_bold"
                android:textColor="@color/black"/>

        </RelativeLayout>

        <!-- 구분선 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1.4dp"
            android:background="@color/darker_grey"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이미지 클릭 시 해당 영상으로 이동됩니다."
            android:paddingRight="20dp"
            android:textSize="12dp"
            android:textColor="@color/darker_grey"
            android:layout_gravity="top|right"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/showResult"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

<!--                둔근-->
                <FrameLayout
                    android:id="@+id/glutesImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/glutes"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="둔근\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                햄스트링-->
                <FrameLayout
                    android:id="@+id/hamstringImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/hamstring"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="햄스트링\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                장요근-->
                <FrameLayout
                    android:id="@+id/iliopsoasImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/iliopsoas"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장요근\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                극하근-->
                <FrameLayout
                    android:id="@+id/infraspinatusImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/infraspinatus"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="극하근\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                견갑거근-->
                <FrameLayout
                    android:id="@+id/levatorScapulaImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/levator_scapula"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="견갑거근\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                소흉근-->
                <FrameLayout
                    android:id="@+id/pectoralisMinorImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/pectoralis_minor"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소흉근\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                T레이즈-->
                <FrameLayout
                    android:id="@+id/tRaiseImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/t_raise"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="T레이즈\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                월 슬라이드-->
                <FrameLayout
                    android:id="@+id/wallSlideImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wall_slide"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="월 슬라이드\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>


<!--                Y 레이즈-->
                <FrameLayout
                    android:id="@+id/yRaiseImage"
                    android:layout_width="330dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/image_background"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="1dp"
                        android:layout_gravity="center"
                        android:src="@drawable/y_raise"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Y레이즈\n스트레칭"
                        android:fontFamily="@font/binggrae"
                        android:textAlignment="center"
                        android:layout_gravity="top|right"
                        android:paddingTop="5dp"
                        android:paddingRight="5dp"
                        android:textSize="15dp"
                        android:textColor="@color/black"/>

                </FrameLayout>



                <!-- 구분선 -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1.4dp"
                    android:background="@color/darker_grey"
                    android:layout_marginHorizontal="20dp"/>

                <!--추가 정보 출력-->
                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp">

                    <TableRow>
                        <TextView
                            android:layout_gravity="left"
                            android:text="bmi:"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_gravity="right"
                            android:id="@+id/showBMI"
                            android:text="22.84"
                            android:textSize="24dp"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:layout_gravity="left"
                            android:text="체중:"
                            android:textSize="24dp"/>
                        <TextView
                            android:layout_gravity="right"
                            android:id="@+id/showBody"
                            android:text="저체중"
                            android:textSize="24dp"/>
                    </TableRow>

                    <!-- 구분선 -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1.4dp"
                        android:background="@color/darker_grey"
                        android:layout_marginBottom="10dp"/>

                    <TableRow>
                        <TextView
                            android:id="@+id/underweight"
                            android:layout_gravity="left"
                            android:text="저체중"/>

                        <TextView
                            android:id="@+id/underweightValue"
                            android:layout_gravity="right"
                            android:text="18.5미만"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/normalweight"
                            android:layout_gravity="left"
                            android:text="정상체중"/>

                        <TextView
                            android:id="@+id/normalweightValue"
                            android:layout_gravity="right"
                            android:paddingLeft="10dp"
                            android:text="18.5이상 23미만"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/overweight"
                            android:layout_gravity="left"
                            android:text="과체중"/>

                        <TextView
                            android:id="@+id/overweightValue"
                            android:layout_gravity="right"
                            android:text="23이상 25미만"/>
                    </TableRow>

                    <TableRow>
                        <TextView
                            android:id="@+id/obese"
                            android:layout_gravity="left"
                            android:text="비만"/>

                        <TextView
                            android:id="@+id/obeseValue"
                            android:layout_gravity="right"
                            android:text="25이상"/>
                    </TableRow>

                </TableLayout>

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/button_design"
                    android:text="되돌아가기" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>